<h1>Listing Stores</h1>

<div class="row">
  <div class="small-6 columns small-centered">
      <%= link_to 'Add Store', new_store_path, class: "button radius expand" %>
  </div>
</div>

<div class="row store-grid">
  <div class="small-12 columns">
    <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-3">
      <% @stores.each do |store| %>
        <li class="th">
          <h5 class="truncate"><%= link_to store.name, store %></h5>
          <div class="row">
            <div class="small-6 columns">
                <%= link_to 'Show', store, class: "button radius tiny expand" %>
            </div>
            <div class="small-6 columns">
                <%= link_to 'Edit', edit_store_path(store), class: "button radius tiny expand secondary" %>    
            </div>
          </div>
        </li>
      <% end %>  
    </ul>
  </div>
</div>